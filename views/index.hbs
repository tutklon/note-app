    <title>{{user.username}}'s Nother..</title>
</head>
 <nav class="nav">
        <a href="/in" class="logo">{{user.username}}'s Nother..</a>
        <ul>
            <li><a href="/all-notes" class="reg">All Notes</a></li>
            <li> | </li>
            <li><a href="/logout" class="reg">Log out</a></li>
        </ul>
    </nav>
    <br>
    <section style="margin: 2% 8% 2% 8%;">
        <div class="seciton">
            <div class="head">
                <h1 class="baslik"><i class="fas fa-sticky-note"></i>&emsp;Last Notes</h1>
                <a href="/add" class="add"><i class="fas fa-plus"></i></a>
            </div>
            <div class="hr"></div>
            <div class="liste">
                {{#each notes}}
                <a href="/view/{{_id}}" class="kart">
                    <form action="/remove/{{_id}}" method="POST">
                        <button type="submit" class="trashbutton"><i class="fas fa-trash-alt"></i></button>
                    </form>
                    <h1 style="color: #46147c;">{{title}}</h1>
                    <span>{{date}}</span>
                </a>
                {{else}}
                <h2 style="margin-top: 2%;">You have not a note yet, Let's create one when click to plus!</h2>
                {{/each}}
            </div>
        </div>
    </section>
